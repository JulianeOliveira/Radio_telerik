@model Radio_BDModel.Programa

@{
    ViewBag.Title = "CadastroPrograma";
}

<h2>Cadastro de Programa</h2>

@using (Html.BeginForm("GravarPrograma", "Home", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Programa</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome_programa, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome_programa)
                @Html.ValidationMessageFor(model => model.Nome_programa)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Hora, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hora)
                @Html.ValidationMessageFor(model => model.Hora)

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Apresentador, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Apresentador)
                @Html.ValidationMessageFor(model => model.Apresentador)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descricao)
                @Html.ValidationMessageFor(model => model.Descricao)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gravar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Emissora","Home")
</div>
